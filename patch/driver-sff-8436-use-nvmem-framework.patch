+	struct nvmem_config nvmem_config;
+	struct nvmem_device *nvmem;
+
 	u8  data[SFF_8436_EEPROM_SIZE];
 
 	struct i2c_client *client[];
@@ -731,26 +733,28 @@ static ssize_t sff_8436_read_write(struct sff_8436_data *sff_8436,
 	return ret;
